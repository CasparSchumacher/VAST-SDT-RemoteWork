# DAG 1: OSS as Confounder
dag {
REMOTE_WORK_CONTEXT -> SOCIAL_CONNECTION_CONDITIONS
SOCIAL_CONNECTION_CONDITIONS -> NEED_SATISFACTION_RELATEDNESS
NEED_SATISFACTION_RELATEDNESS -> INTRINSIC_MOTIVATION

ORGANIZATIONAL_SUPPORT_STRUCTURES -> REMOTE_WORK_CONTEXT
ORGANIZATIONAL_SUPPORT_STRUCTURES -> SOCIAL_CONNECTION_CONDITIONS
}

# DAG 2: OSS as Mediator
dag {
bb="-4.528,-5.169,5.347,4.37"
INTRINSIC_MOTIVATION [outcome,pos="2.636,-0.600"]
NEED_SATISFACTION_RELATEDNESS [pos="1.098,-0.199"]
ORGANIZATIONAL_SUPPORT_STRUCTURES [pos="-1.613,-2.110"]
REMOTE_WORK_CONTEXT [exposure,pos="-2.957,-0.159"]
SOCIAL_CONNECTION_CONDITIONS [pos="-0.892,-0.506"]
NEED_SATISFACTION_RELATEDNESS -> INTRINSIC_MOTIVATION
ORGANIZATIONAL_SUPPORT_STRUCTURES -> SOCIAL_CONNECTION_CONDITIONS
REMOTE_WORK_CONTEXT -> ORGANIZATIONAL_SUPPORT_STRUCTURES
REMOTE_WORK_CONTEXT -> SOCIAL_CONNECTION_CONDITIONS
SOCIAL_CONNECTION_CONDITIONS -> NEED_SATISFACTION_RELATEDNESS
}

# DAG 3: OSS as Cause of Mediator
dag {
REMOTE_WORK_CONTEXT -> SOCIAL_CONNECTION_CONDITIONS
ORGANIZATIONAL_SUPPORT_STRUCTURES -> SOCIAL_CONNECTION_CONDITIONS
SOCIAL_CONNECTION_CONDITIONS -> NEED_SATISFACTION_RELATEDNESS
NEED_SATISFACTION_RELATEDNESS -> INTRINSIC_MOTIVATION
}

# DAG 4/5: total vs direct effects
dag {
  REMOTE_WORK_CONTEXT -> AUTONOMY_SUPPORT
  REMOTE_WORK_CONTEXT -> SOCIAL_CONNECTION_CONDITIONS
  REMOTE_WORK_CONTEXT -> CONTEXTUAL_COMPETENCE_CONDITIONS

  AUTONOMY_SUPPORT -> NEED_SATISFACTION_AUTONOMY
  SOCIAL_CONNECTION_CONDITIONS -> NEED_SATISFACTION_RELATEDNESS
  CONTEXTUAL_COMPETENCE_CONDITIONS -> NEED_SATISFACTION_COMPETENCE

  NEED_SATISFACTION_AUTONOMY -> INTRINSIC_MOTIVATION
  NEED_SATISFACTION_RELATEDNESS -> INTRINSIC_MOTIVATION
  NEED_SATISFACTION_COMPETENCE -> INTRINSIC_MOTIVATION
}
